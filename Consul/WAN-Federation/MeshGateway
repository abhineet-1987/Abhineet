# https://developer.hashicorp.com/consul/docs/east-west/mesh-gateway/enable
# https://developer.hashicorp.com/consul/docs/east-west/mesh-gateway/federation
# https://developer.hashicorp.com/consul/tutorials/archive/service-mesh-gateways


consul tls ca create
sudo consul tls cert create -server -dc dc1 -additional-dnsname="*.dc2.consul" -node server-dc1      (for wan federation)
sudo consul tls cert create -server -dc dc2 -additional-dnsname="*.dc1.consul" -node server-dc2
